@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Welcome " + User.Identity.GetUserName().ToString()+  "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class= "nav-link navbar-brand" })
        </li>
        <li>
            <div class="nav-link navbar-brand mt-2 ms-1" style="border-left: 2px solid white; height:25px!important"></div>
        </li>
        <li><a class="nav-link navbar-brand" href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>
    </ul>
    }
}
else
{
<ul class="navbar-nav navbar-right">
    @*<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>*@
    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link navbar-brand" })</li>
</ul>
}
