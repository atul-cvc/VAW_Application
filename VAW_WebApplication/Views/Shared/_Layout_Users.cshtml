@{
    string curr_year = DateTime.Now.Year.ToString();
    var userRole = Session["UserRole"] as string;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Images/cvc-logo.png" type="image/icon type">
    <title>@ViewBag.Title - VAW</title>
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <!-- jQuery -->
    @*<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>*@
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css">
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
    <!-- DataTables Buttons Extension CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.3.2/css/buttons.dataTables.min.css">
    <!-- DataTables Buttons Extension JS -->
    <script src="https://cdn.datatables.net/buttons/2.3.2/js/dataTables.buttons.min.js"></script>
    <!-- JSZip for Excel export -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <!-- PDFMake for PDF export -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <!-- Buttons for export -->
    <script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.flash.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.print.min.js"></script>

    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
    

    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/SbteJS.js"></script>

</head>

<body>
    <style>
        /* Custom styles for the sidebar */
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            background-color: #f5f5f5;
            padding: 20px;
            border-right: 1px solid #ddd;
            overflow-y: auto; /* Scroll if content is too long */
            display: flex;
            flex-direction: column;
        }

            .sidebar .nav-links {
                margin-top: 25vh;
                /*margin-bottom:auto;*/
                flex: 1; /* Take up remaining space */
            }

            .sidebar a {
                text-decoration: none;
                color: #333;
                display: block;
                padding: 10px;
                border-radius: 4px;
            }

                .sidebar a.active,
                .sidebar a:hover {
                    background-color: #ddd;
                }

        .content {
            margin-left: 270px; /* Adjust to match the sidebar width */
            padding: 20px;
        }

        .logout-button {
            margin-top: auto; /* Push the button to the bottom of the sidebar */
            /*text-align: center;*/
        }

        .shadow {
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
    </style>


    <div class="row" style="top:0;left:0;height:auto;background-color:ButtonFace; padding:5px; margin-left:250px;margin-right:5px;border-radius:0px;">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="padding-top:20px;text-align:center;">
            <h2 style="font-family:'Times New Roman';">Vigilance Awareness Week - @DateTime.Now.Year.ToString()</h2>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4" style="padding-top:20px;text-align:center;">
        </div>
    </div>

    <div class="body-content">

        <div class="sidebar">
            @*<h4>Sidebar</h4>*@
            <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
                <img src="~/Images/cvc-logo.png" />
            </div>
            <br />
            @if (userRole == "ROLE_ADMIN")
            {
                <div class="nav-links">
                    <a href="@Url.Action("ViewVigilanceAwareness" , "Admin")" class="nav-link shadow">Preventive Vigilance Activities</a>
                    <br />
                    <a href="@Url.Action("ViewIntegrityPledge" , "Admin")" class="nav-link shadow">Activity Report Format</a>
                </div>
            }
            else
            {
                <div class="nav-links">
                    <a href="@Url.Action("Index", "ViewVigilanceAwareness")" class="nav-link shadow" data-target="option1">Preventive Vigilance Activities</a>
                    <br />
                    <a href="@Url.Action("Index", "ViewIntegrityPledge")" class="nav-link shadow" data-target="option2">Activity Report Format</a>
                </div>
            }
            <div class="logout-button">
                @*<button class="btn btn-danger">Logout</button>*@
                <a href="@Url.Action("Index", "Home")" class="nav-link shadow " style="background-color: #4f535a; color:white;" >Logout</a>
            </div>
        </div>

        <div class="content" style="margin-left: 250px !important">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('input[type=datetime]').datepicker({
                dateFormat: "dd/M/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0"
            });
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const textArea = document.getElementById('myTextArea');
            const wordCountDisplay = document.getElementById('wordCount');
            const maxWords = 500;

            textArea.addEventListener('input', function () {
                const words = textArea.value.trim().split(/\s+/).filter(Boolean);
                const wordCount = words.length;

                if (wordCount > maxWords) {
                    textArea.value = words.slice(0, maxWords).join(' ');
                }

                wordCountDisplay.textContent = `Word count: ${Math.min(wordCount, maxWords)} / ${maxWords}`;
            });
        });
    </script>

    @RenderSection("scripts", required: false)


</body>
</html>
