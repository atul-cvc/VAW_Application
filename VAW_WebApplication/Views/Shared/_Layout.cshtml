<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Images/cvc-logo.png" type="image/icon type">
    <title>@ViewBag.Title - VAW</title>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
    <script src="~/Scripts/SbteJS.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>

</head>

<body>
    <div class="row" style="height:auto;background-color:ButtonFace; padding:5px; margin-left:5px;margin-right:5px;border-radius:10px;">
        <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
            <img src="~/Images/cvc-logo.png" />
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="padding-top:20px;text-align:center;">
            <h2 style="font-family:'Times New Roman';">Vigilance Awareness Week -  @DateTime.Now.Year</h2>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4" style="padding-top:20px;text-align:center;">
        </div>
    </div>
    <div class="body-content">

        <div class="content">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>   
    @RenderSection("scripts", required: false)
</body>
</html>
