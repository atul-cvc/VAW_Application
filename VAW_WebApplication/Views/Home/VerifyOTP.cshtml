@model VAW_WebApplication.Models.VerifyOTPViewModel
@{
    ViewBag.Title = "VerifyOTP";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var errMsg = ViewBag.OTPErrorMsg ?? "";
}


<div class="row" style="margin-top:25px;">

    <div class="col-md-offset-4 col-md-4 table-bordered">

        <form action="VerifyOtp" method="post">
            @Html.AntiForgeryToken();
            @*<div class="row">*@
            <div class="form-horizontal">
                <h4 style="text-align:center">Verify OTP</h4>
                <hr />
                @Html.HiddenFor(model => model.UserId)
                @Html.HiddenFor(model => model.NoOfAttempt)

                <div class="form-group">
                    @Html.LabelFor(model => model.Otp, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Otp, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Otp, "", new { @class = "text-danger" })
                        <div style="margin-top:15px;">
                            <span style="color:red;">@errMsg</span>
                        </div>
                    </div>
                </div>


                <br />
                <div class="form-group" style="text-align:center">
                    <button type="submit" class="btn btn-primary" style="margin-top:15px">Verify</button>
                </div>
            </div>
        </form>


    </div>

</div>

