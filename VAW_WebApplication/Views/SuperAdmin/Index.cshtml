@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Super Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int CvoUserIndex = 0;

}

<div class="mainBox" id="CvoUsers">
    <div style="display:flex; justify-content:space-between">
        <h3> All Roles</h3>
        <a href="@Url.Action("Register", "SuperAdmin")" class="btn btn-primary text-center " style="align-self:center" id="CreateCvoUser" name="CreateCvoUser">Create</a>

    </div>
    <hr />
    <div>
        @*table content*@
        <table id="CvoUserTable" class="display">
            <thead>
                <tr>
                    <th style="text-align:center" class="th1">S No.</th>
                    @*<th style="text-align:center">Id</th>*@
                    <th style="text-align:center">Name</th>                   
                    <th style="text-align:center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center" class="td1">@(++CvoUserIndex)</td>
                        @*<td style="text-align:center">@item.Id</td>*@
                        <td style="text-align:center">@item.Name</td>                        
                        <td style="text-align:center">
                            @*@Html.ActionLink("Edit", "EditCapacityBuilding", new { id = item.ID }, new { @class = "btn btn-primary text-center" })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>





<script>
    $(document).ready(function () {
        $('#CvoUserTable').DataTable();
    });
</script>
